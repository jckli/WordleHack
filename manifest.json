{
    "manifest_version": 2,
    "name": "Wordle Hack",
    "version": "0.1.3",
    "description": "A simple browser extension that shows the solution to each day's wordle puzzle.",
    "icons": {
      "32": "assets/icon/32.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.powerlanguage.co.uk/wordle/", "*://*.nytimes.com/games/wordle/index.html"],
        "js": ["src/js/content.js"]
      }
    ],
    "browser_action": {
        "default_popup": "src/popup.html"
    },
    "permissions": [
        "storage"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "jack@hayasaka.moe"
      }
    }
}